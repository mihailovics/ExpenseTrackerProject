@model ExpenseTracker.DTOs.GeneralViewModel

@{
    ViewData["Title"] = "EditIncome";
}

<h2 class="text-center">Edit Income</h2>
<hr />
<div class="row">
    <div class="col-lg-12 d-flex justify-content-center text-center">
        <form asp-action="EditIncome" asp-controller="Income" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SourceId" class="control-label"></label>
                <select asp-for="SourceId" asp-items="@Model.Sources" class="form-control">
                    <option value="">-- Select a Source --</option>
                </select>
                <span asp-validation-for="SourceId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Save" class="btn btn-primary form-buttonSubmit" />
            </div>
        </form>
    </div>
</div>
<div class="row justify-content-center text-center">
    <div class="text-center btn btn-primary a-button form-buttonBack">
        <a asp-action="Index">Back to List</a>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
