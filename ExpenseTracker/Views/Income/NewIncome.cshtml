@model ExpenseTracker.DTOs.IncomeViewModel

@{
    ViewData["Title"] = "NewIncome";
}

<h1 class="text-center">New Income</h1>

<h4 class="text-center">Income</h4>
<hr />
<div class="row">
    <div class="col-lg-12 d-flex justify-content-center text-center">
        <form asp-action="NewIncome">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SourceId" class="control-label"></label>
                <select asp-for="SourceId" asp-items="@Model.Sources" class="form-control">
                    <option value="">-- Select a Source --</option>
                </select>
                <span asp-validation-for="SourceId" class="text-danger"></span>
                
            </div>
            <div class="pt-3 form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="d-flex justify-content-center">
    <a href="/Income">Back to List</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
